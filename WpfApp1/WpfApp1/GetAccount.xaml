<Window x:Class="WpfApp1.GetAccount"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		mc:Ignorable="d"
        Title="获取账号" Height="500" Width="400"
		ResizeMode="NoResize"
		WindowStyle="None"
		BorderBrush="Gray"
		BorderThickness="3"
		MouseMove="DMouseMove"
		WindowStartupLocation="CenterScreen">
	<Grid Background="AntiqueWhite">
		<Button Name="min" BorderThickness="0" FontWeight="Bold" Background="AntiqueWhite" Content="-" TextBlock.TextAlignment="Center" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Top" Width="39" Height="28" Margin="36,0,0,0" RenderTransformOrigin="-0.394,0.444" Click="Min_Click"/>
		<Button BorderThickness="0" Background="AntiqueWhite" Content="x" TextBlock.TextAlignment="Center"  FontSize="19" HorizontalAlignment="Left" VerticalAlignment="Top" Width="36" RenderTransformOrigin="-0.296,0.211" Height="28" Click="Button_Click"/>
		<Image HorizontalAlignment="Left" Source="Pic/logo.png" Height="61" Margin="180,30,0,0" VerticalAlignment="Top" Width="180"/>
	</Grid>
</Window>
